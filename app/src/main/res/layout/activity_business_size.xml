<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".views.activities.BusinessSizeActivity">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="start"
        android:layout_marginTop="25dp"
        android:contentDescription="Back arrow"
        android:src="@drawable/baseline_arrow_back_24" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginVertical="16dp"
        android:progress="50"
        android:progressTint="#4CAF50" />

    <!-- Title -->
    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your team size?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/team_size_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/just_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just me"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/two_three_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-3 staff members"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/four_six_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4-6 staff members"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/more_than_six_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More than 6 staff members"
            android:textSize="16sp" />
    </RadioGroup>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:backgroundTint="#1010E6" />
</LinearLayout>
