<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:gravity="center_vertical">

    <!-- Delete Button -->
    <ImageView
        android:id="@+id/delete_service"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/faq"
        android:contentDescription="Delete service"
        android:layout_marginEnd="16dp" />

    <!-- Service Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female Haircut"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45min"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Service Price -->
    <TextView
        android:id="@+id/service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$35.00"
        android:textSize="16sp"
        android:textColor="#4CAF50" />

    <!-- Arrow -->
    <ImageView
        android:id="@+id/service_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close"
        android:contentDescription="View service details"
        android:layout_marginStart="8dp" />
</LinearLayout>
