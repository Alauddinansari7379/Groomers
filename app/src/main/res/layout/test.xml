<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Location Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                app:tint="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raghuvir Ganj"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hapur"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Profile Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/man"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_circle"
                android:layout_centerHorizontal="true"/>

            <!-- Initials Label (JS) -->
            <TextView
                android:id="@+id/initials_label"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="JS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/circle_blue"/>
        </RelativeLayout>

        <!-- Name and Edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jasmeet Singh Lubana"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_edit_square_24"
                android:layout_marginStart="8dp"
                app:tint="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Manage -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="32dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/logout"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="8sp"
                        android:text="Manage"
                        android:backgroundTint="@color/Blue"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- Help -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_help_24"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="8sp"
                        android:text="Help"
                        android:backgroundTint="@color/Blue"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- Past Orders -->
                <Button
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:textSize="8sp"
                    android:text="Past Orders"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/Blue"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>

            <!-- Right Side -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Address -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="32dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/location"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="8sp"
                        android:text="Address"
                        android:backgroundTint="@color/Blue"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- Suggestions -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/logout"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="8sp"
                        android:text="Suggestions"
                        android:backgroundTint="@color/Blue"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <!-- Logout -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/logout"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="8sp"
                        android:text="Logout"
                        android:backgroundTint="@color/Blue"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Offer Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_white_box"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_card_giftcard_24"
                app:tint="@color/mainColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your next grooming on us"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get yourself a free grooming session from us."
                    android:textSize="12sp"
                    android:textColor="#666666"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
