<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="@string/back_arrow"
        android:layout_gravity="start" />


    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progress="50"
        android:progressTint="#4CAF50"
        android:layout_marginVertical="16dp" />


    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_s_your_team_size"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />


    <RadioGroup
        android:id="@+id/team_size_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/just_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/just_me"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/two_three_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2_3_staff_members"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/four_six_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_4_6_staff_members"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/more_than_six_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_than_6_staff_members"
            android:textSize="16sp" />
    </RadioGroup>


    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue1"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:backgroundTint="#D3D3D3" />
</LinearLayout>
