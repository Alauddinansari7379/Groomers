<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainColor"
    android:gravity="center">

    <!-- Header Text -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who's Watching?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Profiles Grid -->
    <GridLayout
        android:id="@+id/profilesGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_margin="16dp"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Profile 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/profileImage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile"
                android:contentDescription="Profile 1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/profileName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayush"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Profile 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/boy"
                android:contentDescription="Profile 2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/profileName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>



    </GridLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/add_profile_border"
        android:gravity="center">

        <TextView
            android:id="@+id/addIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

    <!-- Add Profile Text -->
    <TextView
        android:id="@+id/addProfileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Profile"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif" />
    <!-- Edit Button -->

</LinearLayout>
