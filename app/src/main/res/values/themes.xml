<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.groomers" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/mainColor</item>
    </style>
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <!--        <item name="android:foreground">@drawable/ripple_custom</item>-->
        <item name="android:background">@color/mainColor</item>
        <!--<item name="itemBackground">@drawable/ripple_custom</item>-->
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="fontFamily">@font/poppins_regular</item>

        <!--        <item name="android:fontFamily">@font/varela_round</item>-->

    </style>

    <style name="CompactRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_stars</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxHeight">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="FeedbackEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.groomers" parent="Base.Theme.groomers" />
</resources>